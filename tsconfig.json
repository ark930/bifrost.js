{
    "extends": "./node_modules/@polkadot/dev/config/tsconfig",
    "exclude": [
      "build/**/*",
      "**/build/**/*"
    ],
    "compilerOptions": {
      "baseUrl": ".",
      "paths":
      {
        "@bifrost-network/types": ["packages/types/src"],
        "@bifrost-network/types/*": ["packages/types/src/*"]
      },
      "skipLibCheck": true,
      "typeRoots": [
        "./node_modules/@polkadot/ts",
        "./node_modules/@types"
      ]
    }
  }
